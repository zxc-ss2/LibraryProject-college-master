    <Style x:Key="PersonalAreaIcon" TargetType="Image">
        <Setter Property="Height" Value="40"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Source" Value="images/user.png"/>
        <Setter Property="Margin" Value="0 0 20 0"/>
    </Style>

    <Style x:Key="BackIcon" TargetType="Image">
        <Setter Property="Height" Value="60"/>
        <Setter Property="Source" Value="images/logout.png"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    <Style x:Key="FilterComboBox" TargetType="ComboBox">
        <Setter Property="Height" Value="30"/>
        <Setter Property="Width" Value="100"/>
        <Setter Property="Background" Value="Green" />
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Margin" Value="20 10 0 0"/>
        <Setter Property="FontSize" Value="14"/>
        <Style.Triggers>
            <Trigger Property="SelectedItem" Value="{x:Null}">
                <Setter Property="SelectedIndex" Value="0"></Setter>
                <Setter Property="Background" Value="{StaticResource MainColor}"/>
            </Trigger>
            <Trigger Property="IsDropDownOpen" Value="True">
                <Setter Property="Background" Value="Red" />
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style TargetType="ComboBoxItem">
        <Setter Property="Background" Value="{StaticResource MainColor}"/>
    </Style>

    <Style x:Key="AccessPermissionComboBox" TargetType="ComboBox" BasedOn="{StaticResource FilterComboBox}">
        <Setter Property="Margin" Value="20 10 0 0"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
